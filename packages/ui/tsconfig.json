{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2017",
    "module": "ES2020",
    "lib": ["es2020", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "lib-types",
    "outDir": "lib",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "paths": {
      "~/*": ["./src/*"],
    },
  },
  "include": ["src", "tailwind.config.js", "src/tailwind.config.js"],
  "exclude": ["src/tailwind.config.js"],
}
